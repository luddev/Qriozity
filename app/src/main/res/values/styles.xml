<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

    </style>

    <!-- Main activity theme. -->
    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Qriozity.NoTitle</item>
        <item name="android:textAppearance">@style/QriozityText</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
    </style>


    <style name="QriozityText" parent="@android:style/TextAppearance">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.7</item>
    </style>


    <style name="ActionBar.Solid.Qriozity.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

</resources>
