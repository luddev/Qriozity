<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/qriozity_purple</item>
        <item name="colorPrimaryDark">@color/qriozity_dark_purple</item>
    </style>

    <!-- Main activity theme. -->
    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Qriozity.NoTitle</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="ActionBar.Solid.Qriozity.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

</resources>
